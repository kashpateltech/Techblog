<div class="posts">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{post.title}}</h2>
      <div>posted by {{User.username}} on {{format_date createdAt}}</div>
      <div class="card-body">
        {{post.body}}
      </div>
    </div>
  </article>
  {{#if post.Comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>
      <div class="card-body">
        {{#each post.Comments}}
          <div>
            <p>{{body}}</p>
            <p>&mdash; {{User.username}}, {{format_date createdAt}}</p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}
  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add new comment</h3>
    </div>
    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />
      <label class="form-label" for="comment-body">Comment</label>
      <textarea name="comment-body" class="form-input"></textarea>
      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>
<script src="/javaScript/comment.js"></script>